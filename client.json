{
    "log": {
        "loglevel": "debug"
    },
    "inbound": {
        "listen": "127.0.0.1",
        "port": 1080,
        "protocol": "socks",
        "settings": {
            "auth": "noauth",
            "udp": true,
            "ip": "127.0.0.1"
        }
    },
    "outbound": {
        "protocol": "vmess",
        "settings": {
            "vnext": [{
                "address": "< BRIDGE SERVER IP>",
                "port": 443,
                "users": [{
                    "id": "< UUID FROM BRIDGE SERVER >",
                    "level": 1,
                    "alterId": 100
                }]
            }]
        },
        "streamSettings": {
            "network": "kcp"
        }
    },
    "outboundDetour": [{
        "protocol": "freedom",
        "settings": {},
        "tag": "direct"
    }],
    "routing": {
        "strategy": "rules",
        "settings": {
            "rules": [{
                    "type": "field",
                    "port": "54-79",
                    "outboundTag": "direct"
                },
                {
                    "type": "field",
                    "port": "81-442",
                    "outboundTag": "direct"
                },
                {
                    "type": "field",
                    "port": "444-65535",
                    "outboundTag": "direct"
                },                           
                {
                    "type": "field",
                    "domain": [
                        "regexp:.*\\.ir$"
                    ],
                    "outboundTag": "direct"
                },
                {
                    "type": "field",
                    "ip": [
                        "geoip:private",
                        "geoip:ir"
                    ],
                    "outboundTag": "direct"
                }
            ]
        }
    }
}